NAME = exec
CPPFLAGS = c++ -Wall -Wextra -Werror -g -std=c++98 -fpermissive
INCLUDES = -I ./
SRC = ./main.cpp \
		./Animal.cpp \
		./Dog.cpp \
		./Cat.cpp \
		./WrongAnimal.cpp \
		./WrongCat.cpp \

# Objects
OBJ_PATH = build/
OBJ = $(addprefix $(OBJ_PATH), $(notdir $(SRC:.cpp=.o)))

# Default target to compile the mandatory part
all: $(NAME)

# Color codes of output on terminal
GREEN = \e[1;32m
WHITE = \033[1;37m
CYAN= \033[0;36m
END = \033[0m

# Target to build the mandatory part
$(NAME): $(OBJ)
	@ $(CPPFLAGS) $(OBJ) -o $@ $(INCLUDES)
	@echo "$(GREEN)--------------------------------------------------$(END)"
	@echo "$(GREEN)The [$(CYAN)CPP-04 ex00$(GREEN)] has been compiled!$(END)"
	@echo "$(GREEN)--------------------------------------------------$(END)"

run: all
	@echo "Running the program..."
	./main.cpp

# Builds mandatory object files
$(OBJ_PATH)%.o: %.cpp
	@mkdir -p $(OBJ_PATH)
	$(CC) -c $(CFLAGS) $< -o $@

# Cleans object files and dependencies
clean:
	@rm -f %.o
	@rm -rf $(OBJ_PATH)
	@echo "$(WHITE)---------------------------------------$(END)"
	@echo "$(WHITE)    Object files were cleaned! ðŸ§¹âœ¨$(END)"
	@echo "$(WHITE)---------------------------------------$(END)"

# Cleans the executable file and pre-compiled header
fclean: clean
	@rm -f $(NAME)
	@echo "$(WHITE)---------------------------------------$(END)"
	@echo "$(WHITE)   Executable file was cleaned! ðŸ§¹âœ¨$(END)"
	@echo "$(WHITE)---------------------------------------$(END)"

# Cleans everything generated by the Makefile and rebuild it all
re: fclean all

# Phony targets
.PHONY: all clean fclean re run
